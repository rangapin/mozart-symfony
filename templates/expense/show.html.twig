{% extends 'base.html.twig' %}

{% block title %}Expense{% endblock %}

{% block body %}
    <h1>Expense</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ expense.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ expense.expName }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ expense.expAmount }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ expense.expCreatedAt ? expense.expCreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ expense.extCat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('expense_index') }}">back to list</a>

    <a href="{{ path('expense_edit', {'id': expense.id}) }}">edit</a>

